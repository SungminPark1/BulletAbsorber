extends ./index.jade
block append style
  link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  div#wrapper
    h1 Signup Page
    div(class="navi")
      section#login
          form#loginForm(class="mainForm", name="loginForm", action="/login", method="POST")
            label(for="username")
            input#user(type="text", name="username", placeholder="username")
            label(for="pass")
            input#pass(type="password", name="pass", placeholder="password")
            input(type="hidden", name="_csrf", value="#{csrfToken}")
            a#loginSubmit(class="formSubmit", href="#") Sign in
      a(class="navi" href="/") Game
      a(class="navi" href="/highscore") Score Board
    section#signup
      form#signupForm(class="mainForm", name="signupForm", action="/signup", method="POST")
        label(for="username") Username: 
        input#username(type="text", name="username", placeholder="username")
        label(for="pass") Password: 
        input#password(type="password", name="pass", placeholder="password")
        label(for="pass2") Password: 
        input#password2(type="password", name="pass2", placeholder="retype password")
        input(type="hidden", name="_csrf", value="#{csrfToken}")
        a#signupSubmit(class="formSubmit", href="#") Sign up