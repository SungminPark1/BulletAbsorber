extends ./index.jade
block append style
  link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  div#wrapper
    h1 Highscores Page
    a(class="navi" href="/") Game
    a(class="navi" href="/highscore") Score Board
    a(class="navi" href="/logout") Logout
  
    section#record
      if !records || records.length == 0
        div.record
          h3 No Records Yet
      else
        each val in records
          div.record
            h3.user User: #{val.user}
            p.score Score: #{val.score}